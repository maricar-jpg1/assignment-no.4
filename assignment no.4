using System;
using system.Lingq;

class Program
{
    static void Main()
    {
        List<string> birthYears = new List<string>();
        int currentYear = DateTime.Now.Year;

        Console.WriteLine("=== Birth Year to Age Converter ===");

        for (int i = 0; i < 5; i++)
        {
            while (true)
            {
                Console.Write($"Enter birth year #{i + 1}: ");
                string input = Console.ReadLine();

                if (int.TryParse(input, out int year))
                {
                    if (year > 1900 && year <= currentYear)
                    {
                        birthYears.Add(input);
                        break;
                    }
                    else
                    {
                        Console.WriteLine(" Please enter a realistic birth year.");
                    }
                }
                else
                {
                    Console.WriteLine(" Invalid input. Only numbers are allowed.");
                }
            }
        }

        Console.WriteLine("\n=== Age and Classification ===");

        foreach (string yearStr in birthYears)
        {
            int year = Convert.ToInt32(yearStr);
            int age = currentYear - year;

            string classification;
            if (age < 18)
                classification = "Minor";
            else if (age < 60)
                classification = "Adult";
            else
                classification = "Senior";

            Console.WriteLine($"Birth Year: {year} | Age: {age} | Classification: {classification}");
        }
    }
}
